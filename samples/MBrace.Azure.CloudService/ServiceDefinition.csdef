<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="MBrace.Azure.CloudService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-06.2.4">
  <WorkerRole name="MBrace.Azure.CloudService.WorkerRole" vmsize="Small">
    <LocalResources>
      <LocalStorage name="LocalMBraceCache" 
                    cleanOnRoleRecycle="true"
                    sizeInMB="409600" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="MBrace.ServiceBusConnectionString" />
      <Setting name="MBrace.StorageConnectionString" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>